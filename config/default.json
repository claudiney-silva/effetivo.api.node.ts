{
  "App": {
    "version": "v0.0.1",
    "port": 3000,
    "url": "http://localhost",
    "database": {
      "mongoUrl": "mongodb://localhost:27017/site-app"
    },
    "auth": {
      "token": {
        "key": "secret",
        "expiresIn": "60 * 60 * 24"
      },
      "refreshToken": {
        "key": "something",
        "expiresIn": "60 * 60 * 24 * 7"
      },
      "authErrorsLimit": 3
    },
    "passport": {
      "google": {
        "clientId": "clientId",
        "clientSecret": "clientSecret"
      }
    },
    "logger": {
      "enabled": true,
      "level": "info"
    }
  }
}
